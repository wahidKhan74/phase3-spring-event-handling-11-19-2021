<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	
	<context:component-scan base-package="com.simplilearn.controller"></context:component-scan>
	
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix">
			<value>/WEB-INF/view/</value>
		</property>
		<property name="suffix">
			<value>.jsp</value>
		</property>
	</bean>
	
	 <bean id="messageSource"
        class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
        <property name="basename" value="classpath:messages"></property>
        <property name="defaultEncoding" value="UTF-8"></property>
    </bean>
   
   
    <bean id = "startEventHandler" class = "com.simplilearn.bean.StartEventHandler"/>
    <bean id = "stopEventHandler" class = "com.simplilearn.bean.StopEventHandler"/>   
    <bean id = "customEventListener" class = "com.simplilearn.bean.CustomEventListener"/>
    <bean id = "customEventPublisher" class = "com.simplilearn.bean.CustomEventPublisher"/>


</beans>